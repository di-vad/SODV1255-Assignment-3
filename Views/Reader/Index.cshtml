@model IEnumerable<libraryManagementSystem.Models.Reader>
@{
    ViewData["Title"] = "Readers";
}

<h2>Readers</h2>
<p>
    <a asp-action="Create">Create New Reader</a>
</p>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reader in Model)
        {
            <tr>
                <td>@reader.Id</td>
                <td>@reader.Name</td>
                <td>@reader.Email</td>
                <td>@reader.PhoneNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@reader.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@reader.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@reader.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
