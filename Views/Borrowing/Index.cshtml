@model IEnumerable<libraryManagementSystem.Models.Borrowing>
@{
    ViewData["Title"] = "Borrowings";
}

<h2>Borrowings</h2>
<p>
    <a asp-action="Create">Create New Borrow</a>
</p>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Book ID</th>
            <th>Reader ID</th>
            <th>Borrow Date</th>
            <th>Return Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.BookId</td>
                <td>@b.ReaderId</td>
                <td>@b.BorrowDate.ToShortDateString()</td>
                <td>@(b.ReturnDate.HasValue ? b.ReturnDate.Value.ToShortDateString() : "Not Returned")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@b.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@b.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@b.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
